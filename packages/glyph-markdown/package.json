    "tsup": "^8",
    "typescript": "^5.5"
  },
  "keywords": [
    "glyph",
    "terminal",
    "markdown",
    "tui",
    "syntax-highlighting",
    "react"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
