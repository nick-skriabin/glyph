{
  "name": "@semos-labs/glyph-markdown",
  "version": "0.1.0",
  "description": "Markdown renderer for Glyph terminal UI framework with syntax highlighting",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
